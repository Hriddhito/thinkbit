{
  "hosting": {
    "public": "public",
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/summary", "destination": "/summary.html" },
      { "source": "/details", "destination": "/details.html" },
      { "source": "/upload", "destination": "/upload.html" },
      { "source": "/", "destination": "/index.html" }
    ]
  }
}